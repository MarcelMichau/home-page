	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}/app.js"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch via NPM",
			"cwd": "${workspaceFolder}",
			"runtimeExecutable": "npm",
			"runtimeArgs": ["run-script", "build"],
			"port": 9229
		},
		{
			"type": "node",
			"name": "vscode-jest-tests",
			"request": "launch",
			"args": ["--runInBand"],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"program": "yarn build"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"program": "${workspaceFolder}\\n\\a"
		}
	]
}
